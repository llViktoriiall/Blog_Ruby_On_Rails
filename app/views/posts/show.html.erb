<article class = "post">
	<section class = "post-head">
		<h2><%= link_to @post.title, post_path(@post) %></h2>		
		<small>
			<time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>
			<% if user_signed_in? %>
			|
			<%= link_to 'Change', edit_post_path(@post) %>
			|
			<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure about that?'} %>
			|
			<% end %>
		</small>
	</section>
	<section class = "post-body">
		<%= @post.body.html_safe %>
		<%= image_tag @post.image.url{:large}, class: 'img-show' if @post.image? %>
	</section>
</article>

<%= render 'disqus' %>